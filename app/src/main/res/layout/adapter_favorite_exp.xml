<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_favorite_exp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/ripple_exp_new">

    <TextView
        android:id="@+id/txt_item_favorite_exp"
        android:text="Expression"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_item_favorite_parent_topic"
        android:layout_below="@id/txt_item_favorite_exp"
        android:text="Topic"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/img_item_favorite_exp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_settings_exp" />

</RelativeLayout>