<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_work_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.ziginsider.ideographicapp.WorkTwoActivity"
    tools:showIn="@layout/app_bar_work_two">

    <fragment
        android:id="@+id/fragment_sliding_tabs_recycler_one"
        android:name="io.github.ziginsider.ideographicapp.FragmentSlidingTabsRecycler"

        android:layout_width="wrap_content"
        android:layout_height="300dp"
        tools:layout="@layout/fragment_sliding_tabs_recycler" />

    <fragment
        android:id="@+id/fragment_sliding_tabs_recycler_two"
        android:name="io.github.ziginsider.ideographicapp.FragmentSlidingTabsRecycler"
        android:layout_below="@id/fragment_sliding_tabs_recycler_one"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        tools:layout="@layout/fragment_sliding_tabs_recycler" />

</RelativeLayout>
