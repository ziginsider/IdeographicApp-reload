<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="20dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#8d03a9f4"
        android:gravity="center"
        android:text="Statistics"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bottom_sheet_header"
        android:background="#c00099cc"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_bs_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Behaviour"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewContent22ee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text=""
                android:textColor="@android:color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt_labels_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labels:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bs_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="456"
                android:textStyle="italic"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_parent_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_labels"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent topic:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bs_parent_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Man"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_parent_topic"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtViewContent22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of subtopics:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bs_number_of_subtopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtViewContent2223"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Expressions:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_bs_number_of_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="456"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>