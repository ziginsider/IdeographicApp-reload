<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_card_stack_topic_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="5dp"
    android:padding="3dp"
    android:background="@drawable/ripple_topic_new"
    android:layout_marginBottom="4dp"
    android:hapticFeedbackEnabled="true">


    <TextView
        android:id="@+id/text_topic_card_stack_item"
        android:text="Topics"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_topic_card_stack_item"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_chevron_right_new" />


</RelativeLayout>