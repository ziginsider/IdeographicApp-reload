<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_def_word"
    android:layout_width="302dp"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_marginRight="24dp"
            android:id="@+id/text_def_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_success_booking_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
            android:id="@+id/button_def_word_dismiss"
            android:layout_marginTop="16dp"
            android:layout_below="@id/text_def_word"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="OK"
            android:textSize="16sp"
            android:textColor="@color/depth_seven"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
