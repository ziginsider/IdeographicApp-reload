<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.ziginsider.ideographicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkActivity_"
            android:label="@string/title_activity_work"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ResultTopicSearchActivity_" />
        <activity
            android:name=".WorkActivityRecycler_"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_work"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecentTopicActivity_"
            android:label="@string/title_activity_recent_topic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoriteExpActivity_"
            android:label="@string/title_activity_favorite_exp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticTopicActivity_"
            android:label="@string/title_activity_statistic_topic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Intro"
            android:label="@string/app_intro" />
        <activity android:name=".OptionsActivity" />
        <activity
            android:name=".WorkTwoActivity_"
            android:label="@string/title_activity_work_two"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CardStackActivity"
            android:parentActivityName=".WorkActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.ziginsider.ideographicapp.WorkActivity_" />
        </activity>

        <uses-library
            android:name="com.sec.android.app.multiwindow"
            android:required="false" />

        <meta-data
            android:name="com.sec.android.support.multiwindow"
            android:value="true" />
        <meta-data
            android:name="com.sec.android.multiwindow.DEFAULT_SIZE_W"
            android:value="632.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.DEFAULT_SIZE_H"
            android:value="598.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.MINIMUM_SIZE_W"
            android:value="632.0dip" />
        <meta-data
            android:name="com.sec.android.multiwindow.MINIMUM_SIZE_H"
            android:value="598.0dip" />


    </application>

</manifest>